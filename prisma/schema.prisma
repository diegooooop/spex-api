generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  uid            String   @id
  name           String?
  company        String?
  title          String?
  mobile         String?
  phone          String?
  email          String?
  website        String?
  address        String?
  socials        Json?
  imageUrl       String?

  claimedAt      DateTime?
  claimedByEmail String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Event {
  id        Int      @id @default(autoincrement())
  uid       String
  kind      String
  ua        String?
  ip        String?
  createdAt DateTime @default(now())
}